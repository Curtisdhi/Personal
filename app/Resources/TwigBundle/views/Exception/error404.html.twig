{% extends 'HyperionPersonalBundle::base.html.twig' %}

{% block title %}{{ status_code }} Error{% endblock %}

{% block content %}
    <div class="row">
        <div class="col s12 offset-m3 m6">
            <div class="card red lighten-4">
                <div class="card-content red-text text-darken-2">
                    <span class="card-title">Error: {{ status_text }}</span>
                    <p class="important-error">The page or file you have requested has been moved or taken off the site.</p>
                </div>
                <div class="card-action">
                    <a href="javascript:history.go(-1);" class="btn btn-primary">Go back</a>
                    <a href="{{ url('hyperion_personal_homepage') }}" class="btn btn-default">Return Home</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
