{% extends 'HyperionPersonalBundle::base.html.twig' %}

{% block title %}
    Blog
{% endblock %}

{% block content %}
    <div class="container">
        <div class="section">
            <div class="row">
                {% for post in posts %}
                    <div class="col s12 m6">
                        <div class="card green lighten-5">
                            <div class="card-content">
                                <span class="card-title">
                                    <a href="{{ url('hyperion_personal_post', {'slug': post.slug}) }}">{{ post.title }}</a>
                                </span>
                                <p class="light">Posted: {{ post.createdAt|date('M d, Y') }}</p>
                                <p>{{ post.content|raw }}</p>
                            </div>
                            <div class="card-action">
                                <i class="fa fa-tags"></i>
                                {{ post.tags }}
                            </div>
                        </div>
                    </div>
                {% else %}
                    <div class="col s12 m12 center">
                        <div class="card green lighten-3">
                            <div class="card-content">
                                <p class="light">No blog posts have been made yet.</p>
                            </div>
                        </div>
                    </div>
                {% endfor %}

            </div>

        </div>
    </div>
{% endblock %}