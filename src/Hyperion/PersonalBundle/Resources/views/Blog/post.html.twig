{% extends 'HyperionPersonalBundle::base.html.twig' %}

{% block title %}
    {{ post.title }}
{% endblock %}

{% block content %}
    <div class="container">
        <div class="section">
            <div class="card green lighten-5">
                <div class="card-content">
                    <span class="card-title black-text">{{ post.title }}</span>
                    <p class="light">Posted: {{ post.createdAt|date('M d, Y') }}</p>
                    <p>{{ post.content|raw }}</p>
                </div>
            </div>
        </div>
    </div>
{% endblock %}