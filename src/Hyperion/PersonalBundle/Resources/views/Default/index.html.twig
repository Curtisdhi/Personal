{% extends 'HyperionPersonalBundle::base.html.twig' %}

{% block title %}
    Home
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('owl-carousel/owl.carousel.css') }}">
    <link rel="stylesheet" href="{{ asset('owl-carousel/owl.theme.css') }}">
{% endblock %}

{% block javascript %}
    {{ parent() }}
    <script src="{{ asset('owl-carousel/owl.carousel.js') }}"></script>
    <script>
        $(document).ready(function () {
            $("#owl-example").owlCarousel();
        });
    </script>
{% endblock %}

{% block body %}
    {% set background = 'shattered' %}
    {{ parent() }}
{% endblock %}

{% block content %}
    <div class="section no-pad-bot " id="index-banner">
        <div class="container">
            <h1 class="header center blue-text darken-2">{{ personal.name }}</h1>
            <div class="center">
                <h5 class="header col s12 light">Software and Web Developer</h5>
                <div class="header-info">
                    <div class="or-spacer">
                        <div class="mask"></div>
                        <span><i>&amp;&amp;</i></span>
                    </div>
                    <div class="row">
                        <div class="col offset-s2 s4">
                            <h5>Languages</h5>
                            PHP, C#, Java, VB.net, &amp; JavaScript
                        </div>
                        <div class="col s4">
                            <h5>Frameworks</h5>
                            Symfony2, Laravel &amp; AngularJS
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <br><br>
    </div>

    <div class="container">
        <div class="section">
            <div class="or-spacer">
                <h5 class="section-title grey-text text-darken-2">Previous Work</h5>
                <div class="mask"></div>
            </div>
            
            <div id="owl-example" class="owl-carousel">
                {% for portfolio in portfolios %}
                    <div class="carousel-item">
                        <div class="title">
                            <span class="grey-text text-darken-1 pull-right">{{ portfolio.projectYear }}</span>
                            <a href="{{ url('hyperion_personal_portfolio_post', {'slug': portfolio.post.slug}) }}">{{ portfolio.post.title|truncate(15) }}</a>
                            
                        </div>
                        <a href="{{ url('hyperion_personal_portfolio_post', {'slug': portfolio.post.slug}) }}">
                            <img class="responsive-img" src="{{ asset(portfolio.webpath) }}">
                        </a>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}