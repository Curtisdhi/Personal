{% extends 'HyperionPersonalBundle::base.html.twig' %}

{% block title %}
    {{ portfolio.post.title }}
{% endblock %}

{% block content %}
    <div class="container">
        <div class="section">
            <div class="card green lighten-5">
                <div class="card-content">
                    <span class="card-title black-text">
                        {{ portfolio.post.title }}
                        <p class="dark pull-right">{{ portfolio.projectYear }}</p>
                    </span>
                    <p>{{ portfolio.post.content|readmore(false)|raw }}</p>
                </div>
                <div class="card-action">
                    <i class="fa fa-tags"></i>
                    {% spaceless %}
                        {{ portfolio.post.tags|join(', ') }}
                    {% endspaceless %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}