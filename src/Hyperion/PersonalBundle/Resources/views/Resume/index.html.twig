{% extends 'HyperionPersonalBundle::base.html.twig' %}

{% block title %}
    Resume
{% endblock %}

{% block content %}
    <div class="container">
        <div class="section">
            <div class="card grey lighten-4">
                <div class="card-content">
                    <div>
                        <a href="{{ url('hyperion_personal_contact') }}" class="pull-right waves-effect waves-light btn pulse">Contact me</a>
                        <span class="card-title black-text">Résumé</span>
                    </div>
                    <div>
                        <object data="{{ asset(resume.webpath) }}" type="application/pdf" width="100%" height="1000px">
                            <a href="{{ asset(resume.webpath) }}">Download resume in PDF format</a>
                        </object>                 
                    </div>
                </div>
                <div class="card-action">
                    Last updated: {{ resume.updatedAt|date('M Y') }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}